<%- include('../template/main/head', { titleWeb: 'Acceso' , cssStyle: 'css/output.css' }) %>
    <%- include('../template/main/navbar') %>

        <style>
            /* Fondo con imagen y overlay oscuro */
            body,
            html {
                height: 100%;
                margin: 0;
            }

            .background-image {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('https://images.unsplash.com/photo-1512820790803-83ca734da794?auto=format&fit=crop&w=1200&q=80') no-repeat center center/cover;
                z-index: -2;
            }

            .overlay {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(15, 23, 42, 0.75);
                /* Azul oscuro semitransparente */
                z-index: -1;
            }

            /* Animación fade-in para el mensaje de error */
            @keyframes fadeIn {
                from {
                    opacity: 0;
                }

                to {
                    opacity: 1;
                }
            }

            .animate-fadeIn {
                animation: fadeIn 0.4s ease-in forwards;
            }

            /* Animación de entrada para el formulario */
            @keyframes slideFadeIn {
                from {
                    opacity: 0;
                    transform: translateY(40px) scale(0.98);
                }

                to {
                    opacity: 1;
                    transform: translateY(0) scale(1);
                }
            }

            .animate-slideFadeIn {
                animation: slideFadeIn 0.7s cubic-bezier(.4, 1.7, .6, 0.8) both;
            }

            /* Animación para el botón principal */
            .btn-animated {
                background: linear-gradient(90deg, #06b6d4 0%, #818cf8 100%);
                background-size: 200% 200%;
                transition: background-position 0.4s, box-shadow 0.3s, transform 0.2s;
                box-shadow: 0 4px 32px 0 rgba(129, 140, 248, 0.15);
            }

            .btn-animated:hover,
            .btn-animated:focus {
                background-position: right center;
                box-shadow: 0 8px 40px 0 rgba(6, 182, 212, 0.25);
                transform: scale(1.05) translateY(-2px);
            }

            /* Animación para el campo de contraseña */
            .input-animated:focus {
                box-shadow: 0 0 0 3px #818cf8aa;
                border-color: #818cf8;
                transition: box-shadow 0.3s, border-color 0.3s;
            }

            /* Animación para el enlace de registro */
            .register-underline {
                position: relative;
                transition: color 0.2s;
            }

            .register-underline::after {
                content: "";
                position: absolute;
                left: 0;
                right: 0;
                bottom: -2px;
                height: 2px;
                background: linear-gradient(90deg, #06b6d4, #818cf8);
                border-radius: 2px;
                transform: scaleX(0);
                transition: transform 0.3s;
                transform-origin: left;
            }

            .register-underline:hover::after,
            .register-underline:focus::after {
                transform: scaleX(1);
            }
        </style>

        <div class="background-image"></div>
        <div class="overlay"></div>

        <div class="min-h-screen flex items-center justify-center px-4">
            <div
                class="w-full max-w-md bg-indigo-900 bg-opacity-95 p-10 rounded-3xl shadow-2xl border-2 border-indigo-700 animate-slideFadeIn">
                <h2 class="text-4xl font-extrabold text-center text-indigo-100 mb-10 tracking-tight drop-shadow">
                    Iniciar Sesión
                </h2>

                <% if (error) { %>
                    <div class="mb-6 flex items-center bg-red-900 bg-opacity-70 border border-red-700 text-red-300 px-4 py-3 rounded-lg text-sm animate-fadeIn"
                        role="alert">
                        <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M18 10c0 4.418-3.582 8-8 8s-8-3.582-8-8 3.582-8 8-8 8 3.582 8 8zm-9-3a1 1 0 112 0v4a1 1 0 11-2 0V7zm2 7a1 1 0 11-2 0 1 1 0 012 0z"
                                clip-rule="evenodd" />
                        </svg>
                        <p>
                            <%= error %>
                        </p>
                    </div>
                    <% } %>

                        <form action="/login" method="POST" novalidate class="space-y-7" id="loginForm"
                            aria-describedby="formError">
                            <div>
                                <label for="userIdentifier"
                                    class="block text-sm font-medium text-indigo-200 mb-2">Usuario o correo
                                    electrónico</label>
                                <div class="relative">
                                    <input type="text" id="userIdentifier" name="userIdentifier" required autofocus
                                        placeholder="Usuario o correo electrónico"
                                        class="w-full px-4 py-3 pr-10 border border-indigo-700 bg-indigo-800 text-white rounded-lg shadow-inner focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 transition input-animated"
                                        aria-describedby="userIdentifierError" />
                                    <svg class="absolute right-3 top-1/2 transform -translate-y-1/2 text-indigo-400 pointer-events-none"
                                        xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none"
                                        stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                        stroke-linejoin="round" viewBox="0 0 24 24">
                                        <path d="M16 12a4 4 0 1 1-8 0 4 4 0 0 1 8 0z"></path>
                                        <path d="M12 14v7"></path>
                                    </svg>
                                </div>
                                <p id="userIdentifierError" class="mt-1 text-xs text-red-300 hidden">Por favor ingresa
                                    tu usuario o correo electrónico.</p>
                            </div>

                            <div>
                                <label for="password"
                                    class="block text-sm font-medium text-indigo-200 mb-2">Contraseña</label>
                                <div class="relative">
                                    <input type="password" id="password" name="password" required
                                        placeholder="Contraseña"
                                        class="w-full px-4 py-3 pr-12 border border-indigo-700 bg-indigo-800 text-white rounded-lg shadow-inner focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 transition input-animated"
                                        aria-describedby="passwordError" />
                                    <button type="button" id="togglePassword" aria-label="Mostrar u ocultar contraseña"
                                        class="absolute right-3 top-1/2 transform -translate-y-1/2 text-indigo-400 hover:text-indigo-300 focus:outline-none p-1 transition-colors duration-200">
                                        <i class="bi bi-eye-slash h-6 w-6"></i>
                                    </button>
                                </div>
                                <p id="passwordError" class="mt-1 text-xs text-red-300 hidden">Por favor ingresa tu
                                    contraseña.</p>
                            </div>

                            <div class="flex items-center justify-between">
                                <label class="inline-flex items-center text-sm text-indigo-200 select-none">
                                    <input type="checkbox" id="rememberMe" name="rememberMe"
                                        class="rounded border-indigo-600 bg-indigo-700 text-indigo-400 focus:ring-indigo-500" />
                                    <span class="ml-2">Recuérdame</span>
                                </label>
                                <a href="/auth/forgot-password"
                                    class="text-sm text-cyan-400 hover:text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded transition">
                                    ¿Olvidaste tu contraseña?
                                </a>
                            </div>

                            <button type="submit"
                                class="w-full btn-animated text-white font-bold py-3 rounded-xl shadow-lg transition-all duration-300 text-lg tracking-wide focus:outline-none focus:ring-4 focus:ring-cyan-300">
                                Entrar
                            </button>
                        </form>

                        <p class="mt-8 text-center text-sm text-indigo-200">
                            ¿No tienes cuenta?
                            <a href="/auth/register"
                                class="register-underline text-cyan-400 hover:text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded transition font-semibold">
                                Regístrate aquí
                            </a>
                        </p>
            </div>
        </div>

        <script>
            (() => {
                const form = document.getElementById('loginForm');
                const userInput = form.userIdentifier;
                const passwordInput = form.password;
                const userError = document.getElementById('userIdentifierError');
                const passError = document.getElementById('passwordError');

                // Validación simple en submit
                form.addEventListener('submit', (e) => {
                    let valid = true;

                    if (!userInput.value.trim()) {
                        userError.classList.remove('hidden');
                        valid = false;
                    } else {
                        userError.classList.add('hidden');
                    }

                    if (!passwordInput.value.trim()) {
                        passError.classList.remove('hidden');
                        valid = false;
                    } else {
                        passError.classList.add('hidden');
                    }

                    if (!valid) {
                        e.preventDefault();
                    }
                });

                // Validación en tiempo real mientras el usuario escribe
                userInput.addEventListener('input', () => {
                    if (userInput.value.trim()) {
                        userError.classList.add('hidden');
                    }
                });

                passwordInput.addEventListener('input', () => {
                    if (passwordInput.value.trim()) {
                        passError.classList.add('hidden');
                    }
                });

                // Toggle mostrar/ocultar contraseña usando Bootstrap Icons
                const togglePasswordBtn = document.getElementById('togglePassword');
                const icon = togglePasswordBtn.querySelector('i');

                togglePasswordBtn.addEventListener('click', () => {
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        icon.classList.remove('bi-eye-slash');
                        icon.classList.add('bi-eye');
                    } else {
                        passwordInput.type = 'password';
                        icon.classList.remove('bi-eye');
                        icon.classList.add('bi-eye-slash');
                    }
                });
            })();
        </script>

