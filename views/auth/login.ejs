<%- include('../template/main/head', { titleWeb: 'Acceso' , cssStyle: ['css/auth/login.css', 'css/main/navbar.css'] }) %>
    <%- include('../template/main/navbar') %>

        <div class="background-image"></div>
        <div class="overlay"></div>

        <div class="min-h-screen flex items-center justify-center px-4">
            <div
                class="w-full max-w-md bg-indigo-900 bg-opacity-95 p-10 rounded-3xl shadow-2xl border-2 border-indigo-700 animate-slideFadeIn">
                <h2 class="text-4xl font-extrabold text-center text-indigo-100 mb-10 tracking-tight drop-shadow">
                    Iniciar Sesión
                </h2>

                <% if (error) { %>
                    <div id="errorAlert" class="mb-6 flex items-center bg-red-900 bg-opacity-70 border border-red-700 text-red-300 px-4 py-3 rounded-lg text-sm animate-fadeIn relative" role="alert">
                        <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M18 10c0 4.418-3.582 8-8 8s-8-3.582-8-8 3.582-8 8-8 8 3.582 8 8zm-9-3a1 1 0 112 0v4a1 1 0 11-2 0V7zm2 7a1 1 0 11-2 0 1 1 0 012 0z"
                                clip-rule="evenodd" />
                        </svg>
                        <p>
                            <%= error %>
                        </p>
                        <button type="button" aria-label="Cerrar alerta" onclick="document.getElementById('errorAlert').style.display='none'" class="absolute top-1 right-2 text-red-200 hover:text-white text-lg font-bold focus:outline-none">&times;</button>
                    </div>
                <% } %>

                <% if (success) { %>
                    <div id="successAlert" class="mb-6 flex items-center bg-green-900 bg-opacity-70 border border-green-700 text-green-300 px-4 py-3 rounded-lg text-sm animate-fadeIn relative" role="alert">
                        <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.707a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <p><%= success %></p>
                        <button type="button" aria-label="Cerrar alerta" onclick="document.getElementById('successAlert').style.display='none'" class="absolute top-1 right-2 text-green-200 hover:text-white text-lg font-bold focus:outline-none">&times;</button>
                    </div>
                <% } %>

                        <form action="/auth/login" method="POST" novalidate class="space-y-7" id="loginForm"
                            aria-describedby="formError">
                            <div>
                                <label for="userIdentifier"
                                    class="block text-sm font-medium text-indigo-200 mb-2">Usuario o correo
                                    electrónico</label>
                                <div class="relative">
                                    <input type="text" id="userIdentifier" name="userIdentifier" required autofocus
                                        placeholder="Usuario o correo electrónico"
                                        class="w-full px-4 py-3 pr-10 border border-indigo-700 bg-indigo-800 text-white rounded-lg shadow-inner focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 transition input-animated"
                                        aria-describedby="userIdentifierError" />
                                    <svg class="absolute right-3 top-1/2 transform -translate-y-1/2 text-indigo-400 pointer-events-none"
                                        xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none"
                                        stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                        stroke-linejoin="round" viewBox="0 0 24 24">
                                        <path d="M16 12a4 4 0 1 1-8 0 4 4 0 0 1 8 0z"></path>
                                        <path d="M12 14v7"></path>
                                    </svg>
                                </div>
                                <p id="userIdentifierError" class="mt-1 text-xs text-red-300 hidden">Por favor ingresa
                                    tu usuario o correo electrónico.</p>
                            </div>

                            <div>
                                <label for="password"
                                    class="block text-sm font-medium text-indigo-200 mb-2">Contraseña</label>
                                <div class="relative">
                                    <input type="password" id="password" name="password" required
                                        placeholder="Contraseña"
                                        class="w-full px-4 py-3 pr-12 border border-indigo-700 bg-indigo-800 text-white rounded-lg shadow-inner focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 transition input-animated"
                                        aria-describedby="passwordError" />
                                    <button type="button" id="togglePassword" aria-label="Mostrar u ocultar contraseña"
                                        class="absolute right-3 top-1/2 transform -translate-y-1/2 text-indigo-400 hover:text-indigo-300 focus:outline-none p-1 transition-colors duration-200">
                                        <i class="bi bi-eye-slash h-6 w-6"></i>
                                    </button>
                                </div>
                                <p id="passwordError" class="mt-1 text-xs text-red-300 hidden">Por favor ingresa tu
                                    contraseña.</p>
                            </div>

                            <div class="flex items-center justify-between">
                                <label class="inline-flex items-center text-sm text-indigo-200 select-none">
                                    <input type="checkbox" id="rememberMe" name="rememberMe"
                                        class="rounded border-indigo-600 bg-indigo-700 text-indigo-400 focus:ring-indigo-500" />
                                    <span class="ml-2">Recuérdame</span>
                                </label>
                                <a href="/auth/forgot-password"
                                    class="text-sm text-cyan-400 hover:text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded transition">
                                    ¿Olvidaste tu contraseña?
                                </a>
                            </div>

                            <button type="submit"
                                class="w-full btn-animated text-white font-bold py-3 rounded-xl shadow-lg transition-all duration-300 text-lg tracking-wide focus:outline-none focus:ring-4 focus:ring-cyan-300">
                                Entrar
                            </button>
                        </form>

                        <p class="mt-8 text-center text-sm text-indigo-200">
                            ¿No tienes cuenta?
                            <a href="/auth/register"
                                class="register-underline text-cyan-400 hover:text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded transition font-semibold">
                                Regístrate aquí
                            </a>
                        </p>
            </div>
        </div>

        <%- include('../template/main/footer', { jsStyle: ['js/auth/login.js'] }) %>